#!/bin/bash



# Ustawienia

BASE_URL="https://braggly-production.up.railway.app"

USERNAME="admin"

PASSWORD="admin"



# 1. Pobranie tokena

TOKEN=$(curl -s -X POST "$BASE_URL/api/auth/login"  -H "Content-Type: application/json"  -d "{\"username\": \"$USERNAME\", \"password\": \"$PASSWORD\"}" | jq -r '.token')



# Sprawdzenie czy token zosta≈Ç pobrany

if [ "$TOKEN" == "null" ] || [ -z "$TOKEN" ]; then

    echo "‚ùå B≈ÇƒÖd: Nie uda≈Ço siƒô pobraƒá tokena!"

    exit 1

fi



echo "‚úÖ Token pobrany: $TOKEN"



# 2. U≈ºycie tokena do wywo≈Çania /api/hello

RESPONSE=$(curl -s -X GET "$BASE_URL/api/hello"    -H "Authorization: Bearer $TOKEN")



echo "üîç Odpowied≈∫ z /api/hello: $RESPONSE"


